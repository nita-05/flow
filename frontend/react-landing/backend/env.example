# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_DB=your_database_name

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
GOOGLE_API_KEY=your_google_api_key_here

# Google Photos API
GOOGLE_PHOTOS_CLIENT_ID=your_google_photos_client_id_here
GOOGLE_PHOTOS_CLIENT_SECRET=your_google_photos_client_secret_here
GOOGLE_PHOTOS_REDIRECT_URI=http://localhost:5000/auth/google/photos/callback

# Session Secret
SESSION_SECRET=your_session_secret_here

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
TEXT_MODEL=
VISION_MODEL=
EMBEDDING_MODEL=
WHISPER_MODEL=

# Local AI toggles (set to 'true' to force local processing)
USE_LOCAL_TRANSCRIPTION=false
USE_LOCAL_VISION=false
USE_LOCAL_EMBEDDINGS=false
USE_LOCAL_STORY=false

# Local models/config
# Vosk transcription model path (required if USE_LOCAL_TRANSCRIPTION=true)
VOSK_MODEL_PATH=./models/vosk-model-small-en-us-0.15
# Local embeddings model id for transformers.js
LOCAL_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
# Ollama endpoint for local story generation (requires Ollama installed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Video Generation APIs (FREE Hugging Face Models)
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here

# AI Video Generation APIs (for REAL story-based videos)
RUNWAY_API_KEY=your_runway_api_key_here
PIKA_API_KEY=your_pika_api_key_here
ELAI_API_KEY=your_elai_api_key_here
HEYGEN_API_KEY=your_heygen_api_key_here

# Cloudinary (for file storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Video Generation Daily Limit (FREE with Hugging Face - can be higher)
VIDEO_GEN_DAILY_LIMIT=50
